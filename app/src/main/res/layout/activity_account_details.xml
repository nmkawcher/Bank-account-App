<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F8F7F7"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_height="match_parent"
    tools:context=".AccountDetailsActivity">

    <TableLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Account Type"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/acctypeTV_ID"
                android:layout_width="0dp"
                android:text="Savings Account"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Account Name"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accNameTVID"
                android:layout_width="0dp"
                android:text="initial name"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Account Number"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accNumberTVID"
                android:layout_width="0dp"
                android:text="initial number"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Phone"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accphoneTV_ID"
                android:layout_width="0dp"
                android:text="+8801812977112"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Email"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accEmailTVID"
                android:layout_width="0dp"
                android:text="test@gmail.com "
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Balance"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accbalanceTVID"
                android:layout_width="0dp"
                android:text="5000"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:visibility="gone"
            android:id="@+id/interestrate_RowID"

            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Interest Rate"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accInterestTV_ID"
                android:layout_width="0dp"
                android:text="6.0"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow

            android:id="@+id/serviceChargeRowID"

            >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/service_charge"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/accServicechargeTV_ID"
                android:layout_width="0dp"
                android:text="3000"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/withdrawmoneyButtonID"
        android:layout_width="140dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:onClick="withdrawmoney"
        android:background="@drawable/button_desgin"
        android:layout_height="35dp"
        android:text="Withdraw Money"/>

    <Button
        android:id="@+id/DepositmoneyButtonID"
        android:layout_width="140dp"
        android:onClick="depositmoney"
        android:textAllCaps="false"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:background="@drawable/button_desgin"
        android:layout_height="35dp"
        android:text="Deposit Money"/>



</LinearLayout>